<body>
    <main>
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <%= render 'userinfo', user: @user %>
                </div>
                <div class="col-md-8 offset-md-1">
                <h2>Book detail</h2>
                <table class="table">
                    <tbody>
                        <tr>
                            <td><%= link_to user_path(@book.user.id) do %>
                                    <%= image_tag @book.user.get_profile_image(100, 70) %>
                                    <br>
                                    <%= @book.user.name %>
                                <% end %>    
                            <td></td>
                            <td><%= link_to @book.title , book_path %></td>
                            <td><%= @book.body %></td>
                            <td>
                            <% if @book.user == current_user %>
                                <%= link_to edit_book_path(@book) do %>
                                    <div class="btn btn-sm btn-success">Edit</div>
                                <% end %>    
                            <% end %>
                            </td>
                            <td>
                            <% if @book.user == current_user %>
                                <%= link_to book_path(@book), method: :delete do %>
                                    <div data-confirm="本当に消しますか？" class="btn btn-sm btn-danger">Destroy</div>
                                <% end %>
                            <% end %>    
                            </td>
                        </tr>
                    </tbody>
                </table>
                </div>
            </div>
        </div>
    </main>
</body>
